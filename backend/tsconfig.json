{
    "compilerOptions": {
        "target": "ES2020",                          // Set the JavaScript language version for output
        "module": "commonjs",                       // Specify module code generation
        "outDir": "./dist",                         // Directory for output JavaScript files
        "rootDir": "./src",                         // Root directory of TypeScript source files
        "strict": true,                             // Enable all strict type-checking options
        "esModuleInterop": true,                    // Enable compatibility with CommonJS modules
        "skipLibCheck": true,                       // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true    // Ensure consistent casing in file names
    },
    "include": ["src/**/*"],                        // Specify files to include in the compilation
    "exclude": ["node_modules"]                     // Specify files to exclude from the compilation
}
